@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}
@if(TempData["success"] != null ){
    <h2 > @TempData["success"]</h2>
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary" > Product List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp;   Create New Product
            </a>
          
        </div>
    </div> 
    <br />  <br />
<table class="table table-bordered table-striped" style="white:100%">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Product Name
            </th>
            <th>
                Quality
            </th>
            <th>
                Price
            </th>
            <th>
                Total price 
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="5%">
                    @obj.Id
                </td>
                <td width="25%">
                    @obj.Title
                </td>
                <td width="25%">
                    @obj.Quantiy
                </td>
                <td width="25%">
                    @obj.Price
                </td>
                <td width="25%">
                    @obj.Price * @obj.Quantiy
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash"></i> Delete</a>
                    </div>
                </td>

            </tr>
        }
    </tbody>
</table>
</div>
