@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}
@if (TempData["success"] != null)
{
        <h2 > @TempData["success"]</h2>
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary" > Product List</h2>
        </div>

    </div> 
    <br />  <br />
<table class="table table-bordered table-striped" style="white:100%">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Product Name
            </th>
            <th>
                Quality
            </th>
            <th>
                Price
            </th>
            <th>
                Total Price
            </th>
        </tr>
    </thead>
    <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="5%">
                        @obj.Id
                    </td>
                    <td width="25%">
                        @obj.Title
                    </td>
                    <td width="25%">
                        @obj.Quantiy
                    </td>
                    <td width="25%">
                        @obj.Price
                    </td>
                    <td width="25%">
                        @obj.Price * @obj.Quantiy
                    </td>
                </tr>
            }
    </tbody>
</table>
</div>
